{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable",
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "composite": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    /* Bundler mode */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
  },
  "include": [
    "vite.config.ts",
    "/**/*.ts",
    "/**/*.tsx",
    "/**/*.vue"
  ],
  "sourceMap": true,

}